<div class="container">
  <h2>ユーザ</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= show_image(user) %>
        <%= user.email %>

        <!-- フォローのフォームに user を渡す -->
        <%= render 'follow_form', user: user %>
      </div>
  <% end %>
</div>
