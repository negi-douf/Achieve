<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10">

    <!-- 通知-->
    <p><%= notice %></p>
    <h1>ブログ一覧</h1>
    <br>

    <%= link_to "ブログ作成", new_blog_path,  class:"btn btn-default" %>
    <br>
    <% @blogs.each do |blog| %>
      <div class="row">

        <div class="avatar">
          <%= profile_img(blog.user) %>
          <%= blog.user.name %>さんが投稿しました
        </div>


        <h4><strong> <%= blog.title %> </strong></p>
        <p><%=blog.content %></p>

        <!-- blog.id で取得できる -->
        <%= link_to "編集", edit_blog_path(blog.id), class:"btn btn-default btn-sm btn-success", data: { confirm: "本当に編集してよろしいですか？" } %>

        <%= link_to "削除", blog_path(blog.id), method: :delete, class:"btn btn-default btn-sm btn btn-danger", data: { confirm: "本当に削除してよろしいですか？"} %>
        <br>

      </div>

      <% end %>
    <br>
  </div>
</div>

<br>

<!-- ページの先頭に移動するボタン -->
<div id="page-top-btn" class="page-top-btn">
  <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
